<Window x:Class="ParetoCalculatorUI.Dialogs.AbstractDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParetoCalculatorUI.Dialogs"
        mc:Ignorable="d"
        Title="AbstractDialog" Height="450" Width="800"
        Style="{DynamicResource PCWindowStyle}">
    <Window.Resources>
        <ResourceDictionary Source="/Resources/Styles.xaml" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="labelText" Height="25.637" Margin="32,-10.606,351.548,0" TextWrapping="Wrap" Text="Select quantity to abstract:" VerticalAlignment="Top" Grid.Row="1"/>
        <ComboBox x:Name="abstractCombo" Height="43.853" Margin="32,49.439,32,0" VerticalAlignment="Top" Grid.Row="1"/>
        <Button x:Name="okButton" Content="OK" HorizontalAlignment="Left" Margin="32,0,0,77.785" VerticalAlignment="Bottom" Click="okButton_Click" Grid.Row="1"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,105.296,77.785" VerticalAlignment="Bottom" Click="cancelButton_Click" Grid.Row="1"/>

    </Grid>
</Window>
